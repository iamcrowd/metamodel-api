    "attributes": {
      "description": "",
      "type": "array"
    },
    "relationships": {
      "description": "",
      "type": "array"
    },
    "inheritances": {
      "description": "",
      "type": "array"
    },
    "connectors": {
      "description": "",
      "type": "array"
    }
